{% extends 'base.html.twig' %}

{% block title %}Hello TimeLogController!{% endblock %}

{% block body %}

<div class="content">
    {% for label, messages in app.flashes(['warning', 'error', 'success']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <p>Errors above? No? Fine!</p>
</div>
{% endblock %}
