{% extends 'base.html.twig' %}

{% block title %}Autolog{% endblock %}

{% block body %}

    <div class="content">
        <h1>⏱ Autolog</h1>
        <div>
            <a href="{{ yesterday_link }}">-</a>
            {{ date }}
            <a href="{{ tomorrow_link }}">+</a>
        </div>
        <ul>
            {% for event in events %}
                <li>
                    {{ event.getProject }}:
                    {% if event.isJiraIssue() %}
                        <a target="_blank"
                           href="{{ event.getJiraUrl() }}">{{ event.getJiraIssue }}</a>
                    {% else %}
                        {{ event.getShortSummary }}
                    {% endif %}
                    ({{ event.getDurationFormatted('%hh %im') }})
                    {% set query_params = { 'duration': event.getDurationFormatted('%hh %im') } %}
                    {% if event.isJiraIssue() %}
                        {% set query_params = query_params|merge({ 'jira': event.getJiraIssue() }) %}
                        <a target="_blank"
                           href="{{ path('time_log', query_params) }}">⏱</a>
                    {% endif %}
                    <div class="harvest-timer"
                         data-item='{
                         "id": "{{ event.getJiraIssue }}",
                         "name": "{{ event.getSummary }}"}'>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <span>Total: {{ total_duration }}</span>
    </div>
{% endblock %}
